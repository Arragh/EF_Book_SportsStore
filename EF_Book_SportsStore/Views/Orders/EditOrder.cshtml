@model Order

<h3 class="p-2 bg-primary text-white text-center">Создать/Изменить заказ</h3>

<form asp-action="AddUpdateOrder" method="post">

    <div class="form-group">
        <label asp-for="OrderId"></label>
        <input asp-for="OrderId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" class="form-control" />
    </div>

    <div class="form-check">
        <label class="form-check-label">
            <input type="checkbox" asp-for="Shipped" class="form-check-input" />
            Shipped
        </label>
    </div>

    <h6 class="mt-1 p-2 bg-primary text-white text-center">Заказанные товары</h6>

    <div class="container-fluid">
        <div class="row">
            <div class="col font-weight-bold">Product</div>
            <div class="col font-weight-bold">Category</div>
            <div class="col font-weight-bold">Quantity</div>
        </div>
        @{ int counter = 0; }
        @foreach (var line in ViewBag.Lines)
        {
            <input type="hidden" name="lines[@counter].ProductId" value="@line.ProductId" />
            <input type="hidden" name="lines[@counter].ProductId" value="@line.ProductId" />
            <input type="hidden" name="lines[@counter].OrderId" value="@Model.OrderId" />
            <div class="row mt-1">
                <div class="col">@line.Product.Name</div>
                <div class="col">@line.Product.Category.Name</div>
                <div class="col">
                    <input type="number" name="lines[@counter].Quantity" value="@line.Quantity" />
                </div>
            </div>
            counter++;
        }
    </div>

    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class=" btn btn-secondary">Отменить</a>
    </div>

</form>